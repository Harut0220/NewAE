<link rel="stylesheet" href="/styles/event.css" />
<link rel="stylesheet" href="/styles/event-categories.css" />

<div id="editContainer">
  <form
    action="/admin/profile/event-category/store"
    method="POST"
    enctype="multipart/form-data"
  >
    <div id="editDiv">
      <div class="main_editDiv">
        <div class="load_img_1">
          <label class="title_"> Добавить категорию</label>
          <img id="closePage1" src="/images/staticimg/x.svg" />
        </div>
        <div class="load_img">
          <label class="custom-file-upload">
            <div class="load">
              <div class="load-1">
                <img id="display-image" />
              </div>

              <div class="load-2">
                <div class="load-2-1">
                  <input
                    type="file"
                    id="image-input"
                    accept="image/jpeg, image/png, image/jpg"
                    name="avatar"
                  />
                  <div class="load-2-2">
                    <div class="load-icon-1">Загрузить другую иконку</div>
                    <div id="load-icon-2-2">
                      Размер иконки должен быть 404x404px
                    </div>
                    <span id="loadImgError"></span>
                  </div>
                </div>
              </div>
            </div>

            <div class="load_map">
              <div class="load-1">
                <img id="display-image_mapIcon" />
                {{! <div id="display-image_mapIcon"></div> }}
              </div>

              <div class="load-2">
                <div class="load-2-1">
                  <input
                    type="file"
                    id="image-input2"
                    accept="image/jpeg, image/png, image/jpg"
                    name="map_avatar"
                    class="inputIcon"
                  />
                  <div class="load-2-2">
                    <div class="load-icon-1">Загрузить иконку для карты</div>
                    <div id="load-icon-2-2">
                      Размер иконки должен быть ???
                    </div>
                    <span id="loadImgError"></span>
                  </div>
                </div>
              </div>
            </div>
          </label>
        </div>
        <select id="selectStatus" name="status">
          <option value="1">Активный</option>
          <option value="0" selected>Неактивный</option>
        </select>
        <input
          placeholder="Название категории"
          id="categoryName"
          onchange="clear()"
          name="name"
        />
        <!--Количество слов 15-->
        <span id="error"></span>
        <div class="my_relative">
          <textarea
            id="textarea_1"
            name="description"
            rows="10"
            cols="10"
            placeholder="Описание"
            style="resize: none"
            oninput="fillInputLength(textarea_1, textarea_1_span)"
            maxlength="100"
          ></textarea>
          <span id="textarea_1_span">0/100</span>
        </div>

        <!--Количество слов 100 -->
        <span id="descriptionError"></span>
        <button id="butns" onclick="AddValid()">Сохранить</button>
      </div>
    </div>
  </form>
</div>
<div id="editContainer2" class="editContainer2">
  <form
    action=""
    method="post"
    id="editContainerForm2"
    enctype="multipart/form-data"
  >
    <input type="text" hidden name="id" id="editContainer2Id" />
    <div id="editDiv">
      <div class="main_editDiv">
        <div class="load_img_1">
          <label class="title_"> Редактировать категорию</label>
          <img
            id="closePage"
            src="/images/staticimg/x.svg"
            onclick="removeModal()"
          />
        </div>
        <div class="load_img">
          <label class="custom-file-upload">
            <div class="load">
              <div class="load-1">
                <div id="display-image2">
                  <img class="iconsImg" id="display-img3" />
                </div>
              </div>
              <div class="load-2">
                <div class="load-2-1">
                  <input
                    type="file"
                    id="image-input3"
                    accept="image/jpeg, image/png, image/jpg"
                    name="avatar"
                  />
                  {{! <img
                    id="uploadImg"
                    src="/images/staticimg/upload.svg"
                    width="28px"
                  /> }}
                  <div class="load-2-2">
                    <div class="load-icon-1">Загрузить другую иконку</div>
                    <div id="load-icon-2">
                      Размер иконки должен быть 404x404px
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </label>
        </div>
        <div class="load_img">
          <label class="custom-file-upload">
            <div class="load">
              <div class="load-1">
                <div id="display-img4">
                  <img class="iconsImg" id="display-image4" />
                </div>
              </div>
              <div class="load-2">
                <div class="load-2-1">
                  <input
                    type="file"
                    id="image-input4"
                    accept="image/jpeg, image/png, image/jpg"
                    name="map_avatar"
                  />
                  {{! <img
                    id="uploadImg2"
                    src="/images/staticimg/upload.svg"
                    width="28px"
                  /> }}
                  <div class="load-2-2">
                    <div class="load-icon-1">Загрузить другую иконку</div>
                    <div id="load-icon-2">
                      Размер иконки должен быть 404x404px
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </label>
        </div>
        <select id="select_2" name="status">
          <option value="1">Активный</option>
          <option value="0">Неактивный</option>
        </select>
        <input
          id="editCategoryName"
          placeholder="Название категории"
          onchange="clear()"
          name="name"
        />

        <div class="my_relative">
          <textarea
            id="textarea_"
            id="w3review"
            rows="4"
            cols="50"
            placeholder="Описание"
            style="resize: none"
            name="description"
            oninput="fillInputLength(textarea_, textarea_span)"
            maxlength="100"
          ></textarea>
          <span id="textarea_span">0/100</span>
        </div>

        <span id="descriptionError2"></span>
        <button id="btns">Сохранить</button>

      </div>
    </div>
  </form>
</div>
<div id="events" style="display: flex;">
  <div class="eventMainBody">
    <div class="eventHead">
      <div class="eventHeadFirstPart">
        <p><a href="/">Главная</a>
          &gt;
          <a href="/admin/profile/events-categories">Категории</a>
          &gt;
          <a id="changeNavText">Все событии</a></p>
      </div>
    </div>
    <div id="eventBody">
      <div id="eventBodyHead">
        <button onclick="UploadFile()">Добавить</button>
      </div>
      <div id="eventBodyContent">
        <table id="table">
          <thead>
            <tr>
              <th class="td1" style="padding: 11px 8px; text-align: center">
                №
              </th>
              <th class="td1">Иконка</th>
              <th class="td1">Иконка Карты</th>
              <th class="td1">Название категории</th>
              <th class="td1">Описание категории</th>
              <th class="td1">Статус</th>
              <th class="td1">Редактировать</th>
            </tr>
          </thead>
          <tbody id="tbody1">
            {{#if categories}}
              {{#each categories}}
                <tr>
                  <td class="td">
                    {{inc @index}}
                  </td>
                  <td class="td">
                    {{#if avatar}}
                      <img class="iconsImg" src="/{{avatar}}" />
                    {{/if}}
                  </td>
                  <td class="td">
                    {{#if map_avatar}}
                      <img class="iconsImg" src="/{{map_avatar}}" />
                    {{/if}}
                  </td>
                  <td class="td">{{name}}</td>
                  <td class="td">{{description}}</td>
                  <td class="td">
                    {{#if status}}
                      Активный
                    {{else}}
                      Неактивный
                    {{/if}}
                  </td>
                  <td class="td" style="text-align:center">
                    <img
                      src="/images/staticimg/Vector1(1).svg"
                      style="width: 15px; height: 16px; cursor: pointer;"
                      onclick="openEditModal('{{json this}}')"
                    />
                  </td>
                </tr>
              {{/each}}
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

