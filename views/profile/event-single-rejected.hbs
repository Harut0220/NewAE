<div id="events" style="display: flex;">
  <div class="eventMainBody">
    <div class="eventHead">
      <div class="eventHeadFirstPart">
        <p><a href="/">Главная</a>
          &gt;
          <a href="/admin/profile/events">События</a>
          &gt;
          <a id="changeNavText">Все событии</a></p>
      </div>
      {{! <div id="eventHeadSecondPart" onclick="toggleModal('filter','flex')">
              Фильтр
              <img src="/images/staticimg/Group(10).svg">
            </div> }}
    </div>
    <div id="allEvMainDiv">
      <div class="allEvBox">
        <div id="allEvBox_header">
          <h4>События</h4>
          <form
            action="/admin/profile/event/reject/{{event._id}}"
            method="POST"
          >
            <input name="status" hidden value="1" />
            <button class="buttonAllow">Одобрить</button>
          </form>
        </div>

        <hr />
        <div class="allEvBoxCont">
          <div id="pics1">
            {{#if event.images}}
              {{#each event.images}}
                <img
                  src="/storage/{{name}}"
                  class="allEvImg"
                  style="width: 118px;height:118px"
                />
              {{/each}}
            {{/if}}
            {{! <img src="/images/pics/image 32.svg" class="allEvImg" />
            <img src="/images/pics/image 32 (1).svg" class="allEvImg" /> }}
          </div>
          <div class="allEvBoxContDiv">
            <div id="boxPersonName">
              <h6>{{event.name}}</h6>
              <div id="emotions">
                <div onclick="wereGoingToCome()">
                  <img src="/images/pics/walking 1.svg" />
                  <a>{{event.participants.length}}</a>
                </div>
                <div>
                  <img src="/images/pics/Vector 80.svg" />
                  {{event.favorites.length}}
                </div>
                <div>
                  <img src="/images/pics/Vector(30).svg" />
                  {{event.likes.length}}
                </div>
                <div>
                  <img src="/images/pics/Vector (20).svg" />
                  {{event.views.length}}
                </div>
              </div>
            </div>

            <div id="boxCatalog">
              <p>{{event.category.name}}</p>
              <a href="#" onclick="createClients()">Пришли на событие:
                {{event.participants.length}}</a>
            </div>
            <div id="boxDescription">
              <p>
                <span>Описание </span>{{event.description}}</p>
            </div>
            <p class="boxP"><span>Дата:</span> {{convertDateTime event.started_time}}-{{convertDateTime event.joinng_time}}</p>
            {{!-- <p class="boxP"><span>Время:</span> 18:30</p> --}}
            <p class="boxP"><span>Телефон:</span>{{event.user.phone_number}}</p>
            <p class="boxP"><span>Веб сайт:</span> {{event.tickets_link}}</p>
            <p class="boxP boxPflex">
              <span>Место прохождения:</span>
              <a id="addressLine">{{event.place_name}}</a>
              {{! <img
                src="/images/pics/locationIcon.svg"
                style="cursor: pointer"
              /> }}
            </p>
            <p></p>
            <p class="boxP">
              <span>Ссылка на билеты:</span>
              <a>
                {{event.tickets_link}}
              </a>
            </p>
            <p class="boxP">
              <span class="biggerLetter">Почему я должен посетить?</span><br />
              {{event.description_visit}}
            </p>
          </div>
        </div>
      </div>
      <div class="allEvBox">
        <p id="deniedP">Причина отклонения События</p>
        <hr />
        <div id="fillResponseMessage">{{getValue event "status"}}</div>
      </div>
    </div>
  </div>
</div>
