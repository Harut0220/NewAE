<div id="events" style="display: flex;">
  <div class="eventMainBody">
    <div class="eventHead">

      <p><a href="/">Главная</a>
        &gt;
        <a href="/profile/notification">Уведомления</a>
        &gt;
        <a id="changeNavText"> Новые категории</a></p>

    </div>
    <div id="eventBody">
      <div id="eventBodyHead">
       <form action="/admin/profile/notification/categories/destroy" method="POST">
              <button>
                <img src="/images/staticimg/delete 1.svg">
              </button>
      </div>
      <div id="eventBodyContent">
        <table id="table">
          <thead>
            <tr>
              <th class="td1" style="padding: 11px 8px; text-align: center">
                №
              </th>
              <th class="td1">Иконка</th>
              <th class="td1">Иконка Карты</th>
              <th class="td1">Название категории</th>
              <th class="td1">Описание категории</th>
              <th class="td1">Статус</th>
              <th class="td1">Редактировать</th>
            </tr>
          </thead>
          <tbody id="tbody1">
            {{#if categories}}
              {{#eventCategoryArraysOne categories "_id" "name" "description" "avatar" "map_avatar" "status"}}
                <tr>
                  <td class="td">
                    <input type="checkbox" style="text-align: center; width: 16px; height: 16px;" name="des_categs" value="{{id}}">
                  </td>
                  <td class="td">
                    <img class="iconsImg" src="/{{avatar}}" />
                  </td>
                  <td class="td">
                    <img class="iconsImg" src="/{{map_avatar}}" />
                  </td>
                  <td class="td">{{name}}</td>
                  <td class="td">{{description}}</td>
                  <td class="td">
                    <span>{{status}}</span>
                    {{#if (eq status 1)}}
                      Активный
                    {{else if (eq status 0)}}
                      Неактивный
                    {{/if}}
                  </td>
                  <td class="td" style="text-align:center">
                    <img
                      src="/images/staticimg/Vector1(1).svg"
                      style="width: 15px; height: 16px; cursor: pointer;"
                      onclick="openEditModal('{{json this}}')"
                    />
                  </td>
                </tr>
              {{/eventCategoryArraysOne}}
            {{/if}}
          </tbody>
        </table>
      </div>
      </form>
    </div>
  </div>
</div>

